@model DoAnHMS.Models.KhachHang

@{
    ViewBag.Title = "Danh sách khách hàng - Chỉnh sửa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Chỉnh sửa thông tin khách hàng</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

