@model DoAnHMS.Models.PhieuDatPhong

@{
    ViewBag.Title = "Phiếu đặt phòng - Chi tiết";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model.CTPhieuDatPhongs);
}

<style type="text/css">
    .grid-footer {
        color: #000;
        font: 17px Calibri;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer a {
            background-color: #ffffff;
            color: blue;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            padding: 1px 10px 2px 10px;
        }

            .grid-footer a:active, a:hover {
                background-color: #ffffff;
                color: #FFAD33;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            }

    .alternatingRowStyle {
        background-color: aliceblue;
    }

    table .table1 {
        text-align: left;
        margin-left: 0px;
        margin-right: 0px;
        width: 800px;
    }

    .tr, .td {
        text-align: left;
    }
</style>

<h3>Thông tin phiếu đặt phòng</h3>
<div class="row">
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.maPDP):</b> @Html.DisplayFor(model => model.maPDP)
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.maKH):</b> @Html.DisplayFor(model => model.KhachHang.tenKH)
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.ngayDen):</b> @{ string ngayDen = Model.ngayDen.ToString("dd/MM/yyyy");} @ngayDen
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.ngayDi):</b> @{ string ngayDi = Model.ngayDi.ToString("dd/MM/yyyy");} @ngayDi
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.soNguoi):</b> @Html.DisplayFor(model => model.soNguoi)
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.tinhTrang):</b> @{ string tt = ""; if (Model.tinhTrang == false) { tt = "Chưa nhận phòng"; } else { tt = "Đã nhận phòng"; } } @tt
    </div>
    <div class="col-md-6">
        <b>@Html.DisplayNameFor(model => model.maNV):</b> @Html.DisplayFor(model => model.NhanVien.tenNV)
    </div>
</div>
<br />

<h5>Chi tiết phiếu đặt phòng</h5>
<p>@Html.ActionLink("Đặt thêm phòng", "CreateCTPhieuDat", new { maPDP = Model.maPDP})</p>
<div id="gridContent">
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover",
        footerStyle: "grid-footer",
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
          columns: new[]  // colums in grid
         {
              grid.Column("STT", format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
     grid.Column("maP", "Mã phòng"),
grid.Column("tienCoc", "Tiền cọc"),
grid.Column("Phong.LoaiPhong.tenLP", "Loại Phòng"),
grid.Column("Phong.LoaiPhong.sucChua", "Sức chứa"),
grid.Column("", format: @<text>
    <a href="@Url.Action("DeleteCTPhieuDat", new { maPDP = item.maPDP, maP = item.maP})"><i class="fa fa-trash"></i></a>
</text>)
}
)
</div>
<p style="text-align:right"><b>@Html.DisplayNameFor(model => model.tongTienCoc):</b> @Html.DisplayFor(model => model.tongTienCoc)</p>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.maPDP }) |
    @Html.ActionLink("Trở về", "Index")
</p>
