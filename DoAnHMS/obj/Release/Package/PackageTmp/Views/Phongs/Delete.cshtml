@model DoAnHMS.Models.Phong

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xoá phòng</h2>

<h3>Bạn có chắc muốn xoá thông tin này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã phòng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.maP)
        </dd>

        <dt>
            Tình trạng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tinhTrang)
        </dd>

        <dt>
            Loại phòng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiPhong.tenLP)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-primary" /> |
            @Html.ActionLink("Trở về trang danh sách", "Index")
        </div>
    }
</div>
