@model DoAnHMS.Models.LoaiPhong

@{
    ViewBag.Title = "Loại phòng - Xem chi tiết";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Thông tin loại phòng</h3>
<img src="/Images/@Html.DisplayFor(model => model.hinhAnh)" style="width:500px; height:auto"  />
<table  style="font-size:20px;margin-left:50px;">
    <tr>
        <td>
            
            <table cellpadding="2" cellspacing="10">

                <tr>
                    <td>Mã loại phòng</td>
                    <td>@Html.DisplayFor(model => model.maLP)</td>
                </tr>
                <tr>
                    <td>Tên Loại Phòng</td>
                    <td>@Html.DisplayFor(model => model.tenLP)</td>
                </tr>
                <tr>
                    <td>Đơn giá</td>
                    <td>@Html.DisplayFor(model => model.donGia)</td>
                </tr>

                <tr>
                    <td>Sức chứa</td>
                    <td>@Html.DisplayFor(model => model.sucChua)</td>
                </tr>
                <tr>
                    <td>Mô tả</td>
                    <td>@Html.DisplayFor(model => model.moTa)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.maLP }) |
    @Html.ActionLink("Trở về", "Index")
</p>
